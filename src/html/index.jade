doctype html
html
	head
		title Main page
		link(rel='stylesheet', href='lib/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='lib/bootstrap/css/bootstrap-theme.min.css')
		link(rel='stylesheet', href='lib/joint/css/joint.min.css')
		link(rel='stylesheet', href='css/index.css')
		script(src='lib/requirejs/js/require.js', data-main='js/main.js')
body
	#papers
		.col-xs-6#taskPaper(data-name='task')
		.col-xs-6#systemPaper(data-name='system')

	#top-utils
		#mode.btn-group(data-toggle='buttons')
			label.btn.btn-default.active
				input(type='radio', name='mode', value='edit', checked)
				| Edit
			label.btn.btn-default
				input(type='radio', name='mode', value='element')
				| Add
			label.btn.btn-default
				input(type='radio', name='mode', value='link')
				| Link
		#proc.btn-group(data-toggle='buttons')
			label.btn.btn-primary.active
				input(type='radio', name='proc', value='1', checked)
				| 1*
			label.btn.btn-primary
				input(type='radio', name='proc', value='2')
				| 2
			label.btn.btn-primary
				input(type='radio', name='proc', value='3')
				| 3
		#algo.btn-group(data-toggle='buttons')
			label.btn.btn-primary
				input(name='algo', type='radio', value='1')
				| 1
			label.btn.btn-primary.active
				input(name='algo', type='radio', value='2', checked)
				| 2*
			label.btn.btn-primary
				input(name='algo', type='radio', value='3')
				| 3
			label.btn.btn-primary
				input(name='algo', type='radio', value='7')
				| 7
			label.btn.btn-primary
				input(name='algo', type='radio', value='9')
				| 9*
			label.btn.btn-primary
				input(name='algo', type='radio', value='10')
				| 10
			label.btn.btn-primary
				input(name='algo', type='radio', value='11')
				| 11*
			label.btn.btn-primary
				input(name='algo', type='radio', value='16')
				| 16
			label.btn.btn-primary
				input(name='algo', type='radio', value='17')
				| 17
		.btn-group
			button.btn.btn-primary#check(type='button') Check
		.btn-group
			button.btn.btn-info#generate(type='button') Generate
		.btn-group
			button.btn.btn-info#mpp(type='button') MPP
		.btn-group
			button.btn.btn-success#save(type='button') Save
			div(style='position: relative; float: left;')
				button.btn.btn-primary(type='button') Load
				input#load(type='file')
		.btn-group
			button.btn.btn-danger#clear(type='button') Clear

	#mpp-box
		.row-fluid
			.col-xs-10
				button.btn.btn-large.btn-danger#mpp-generate(type='button') Generate
			.col-xs-2
				.form-group
					label(for='mpp-proc-multi') Processor multiplier
					input.form-control(type='number', id='mpp-proc-multi', min=0.25, step=0.25, max=8, value=1, required)
				.form-group
					label Duplex connectivity: #{''}
						input(type='checkbox', id='mpp-duplex', checked)
		#mpp-inner

	#editor
	#generate-box
