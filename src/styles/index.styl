html, body {
	height: 100%;
	margin: 0;
	padding: 0;
	background: #807752;
}

sup {
	display: none;
}

#papers {
	height: 100%;

	.clear {
		position: absolute;
		bottom: 0;
		right: 0;
		border: 2px dashed #EDA134;
	}
}

#taskPaper,
#systemPaper {
	height: 100%;
	z-index: 1;
	border: 5px solid #808080;
	position: relative;
	&:after {
		content: attr(data-name);
		display: inline-block;
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		text-align: center;
		font-size: 25px;
    font-style: italic;
		font-weight: bold;
	}
}

#systemPaper {
	.marker-target,
	.marker-source,
	.labels {
		display: none;
	}
}

#generate-box {
	width: 300px;
	min-height: 100px;
	position: absolute;
	background: #6278ff;
	top: 70px;
	right: 0;
	z-index: 2;
	padding: 10px 0 0;
	display: none;

	&.visible {
		display: block;
	}
}
#editor {
	width: 300px;
	min-height: 100px;
	position: absolute;
    background: #EDA134;
    top: 40%;
    right: 40%;
	z-index: 2;
	display: none;
	padding: 10px 0 0;

	&.shown {
		display: block;
	}

	.close {
		position: absolute;
		z-index: 3;
		top: 5px;
		right: 5px;
	}

	.edit {
		display: none;
	}

	&.edit-link {
		.link {
			display: block;
		}
	}

	&.edit-entity {
		.entity {
			display: block;
		}
	}
}

#top-utils-box {
	height: 100%;
}

#top-utils {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	padding: 10px;
	text-align: center;

	.btn-group {
		margin: 10px 5px 0;
		overflow: hidden;
		width: 100%;
	}
}

#load {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	opacity: 0;
	width: 100%;
}

.link-tools,
.marker-arrowheads {
	display: none;
}

#stat-box,
#mpp-box {
	display: none;
	position: absolute;
	top: 0;
	left: 17%;
	right: 0;
	z-index: 2;
	background: #fff;

	padding: 20px;

	&.visible {
		display: block;
	}
}

svg {
	height: 100%;
	width: 100%;
}
