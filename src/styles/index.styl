html, body {
	height: 100%;
	margin: 0;
	padding: 0;
}

#paper {
	height: 100%;
	z-index: 1;
}
#generate-box {
	width: 300px;
	min-height: 100px;
	position: absolute;
	background: #6278ff;
	top: 70px;
	right: 0;
	z-index: 2;
	padding: 10px 0 0;
	display: none;

	&.visible {
		display: block;
	}
}
#editor {
	width: 300px;
	min-height: 100px;
	position: absolute;
	background: #5affcc;
	top: 20px;
	right: 0;
	z-index: 2;
	display: none;
	padding: 10px 0 0;

	&.shown {
		display: block;
	}

	.close {
		position: absolute;
		z-index: 3;
		top: 5px;
		right: 5px;
	}

	.edit {
		display: none;
	}

	&.edit-link {
		.link {
			display: block;
		}
	}

	&.edit-entity {
		.entity {
			display: block;
		}
	}
}

#top-utils {
	position: absolute;
	top: 0;
	left: 0;
	background: #807752;
	width: 100%;
	padding: 10px;
	text-align: center;

	.btn-group {
		margin: 0 5px;
	}
}

#load {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	opacity: 0;
	width: 100%;
}

.link-tools,
.marker-arrowheads {
	display: none;
}

#mpp-box {
	display: none;
	position: absolute;
	top: 60px;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 2;
	background: red;

	&.visible {
		display: block;
	}
}

svg {
	margin-top: 55px;
	height: calc(100% - 60px);
}